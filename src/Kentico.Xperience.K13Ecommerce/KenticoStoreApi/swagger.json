            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "culture",
            "in": "query",
            "schema": {
              "pattern": "[a-zA-Z]{2}-[a-zA-Z]{2}",
              "type": "string"
            }
          },
