@using DancingGoat.Models

@model CategoryPageViewModel

@{
    ViewData["PageClass"] = "inverted";
}

<div class="product-category">
    <h1>@Model.CategoryName</h1>
    <div class="col-md-8 col-lg-9 product-list">
        @foreach (var product in Model.Products)
        {
            <partial name="~/Views/Shared/KStore/ProductListItem.cshtml" model="product" />
        }
    </div>
</div>

